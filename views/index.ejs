<%- include('includes/head.ejs') %>
<link rel="stylesheet" href="/css/tasks.css">
</head>

<body>
    <%- include('includes/nav.ejs') %>

    <main>
        <% if(tasks.length > 0) { %>
            <div class="task-panel">
                <% for(let task of tasks) { %>
                <div class="task">
                    <h2 class="task__title"><%= task.title%></h2>
                    <div class="task__button-group">
                        <div class="task__button">
                            <form action="/task/<%=task._id%>" method="GET">
                                <button class="btn btn--details" type="submit">Details</button>
                            </form>
                        </div>
                        <div class="task__button">
                            <form action="/admin/edit-task/<%=task._id%>" method="GET">
                                <input type="hidden" value="true" name="edit">
                                <button class="btn btn--update" type="submit">Update</button>
                            </form>
                        </div>
                        <div class="task__button">
                            <form action="/admin/delete-task/<%=task._id%>" method="POST">
                                <button class="btn btn--delete" type="submit">Delete</button>
                            </form>
                        </div>
                    </div>
                </div>
                <% } %>
            </div>
        <% } else { %>
            <h1> No Tasks Left</h1>
        <% } %>
    </main>
</body>

</html>